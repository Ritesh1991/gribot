<?xml version='1.0' ?>

<robot name="Gribot" >

   <!-- Definition of colors user in gribot -->
   <material name="Black">
      <color rgba="0.0 0.0 0.0 1.0"/>
   </material>

   <material name="Red">
      <color rgba="0.8 0.0 0.0 1.0"/>
   </material>

   <material name="White">
      <color rgba="1.0 1.0 1.0 1.0"/>
   </material>

   <material name="Blue">
      <color rgba="0.0 0.0 0.8 1.0"/>
   </material>


   <!-- Base link -->

   <link name="base_link">
      <visual>
         <!-- <origin xyz="0 0 0" rpy="0 0 0" /> -->
         <geometry>
            <box size="0.8 0.6 0.25"/> 
         </geometry>
         <collision>
            <geometry>
              <box size="0.8 0.8 0.25" />
            </geometry>
         </collision>
         <inertial>
            <mass value="20"/>
         </inertial>
         <material name="Blue" />
      </visual>
   </link>

 
   <!-- Front right wheel -->

   <link name="front_right_wheel">
      <visual>
         <origin xyz="0 0 0" rpy=" 1.570795 0 0" />
         <geometry>
            <cylinder length="0.1" radius="0.18" />
         </geometry>
         <material name="Black" />
      </visual>
   </link>

   <joint name="joint_front_right_wheel" type="continuous">
      <parent link="base_link" />
      <child link="front_right_wheel" />
      <origin xyz="0.20 0.35 -0.05" rpy="0 0 0" />
      <axis xyz="0 1 0" /> <!-- Rotation axes -->
   </joint>


   <!-- Front left wheel -->

   <link name="front_left_wheel">
      <visual>
         <origin xyz="0 0 0" rpy=" 1.570795 0 0" />
         <geometry>
            <cylinder length="0.1" radius="0.18" />
         </geometry>
         <material name="Black" />
      </visual>
   </link>

   <joint name="joint_front_left_wheel" type="continuous">
      <parent link="base_link" />
      <child link="front_left_wheel" />
      <origin xyz="0.20 -0.35 -0.05" rpy="0 0 0" />
      <axis xyz="0 1 0" />
   </joint>


   <!-- Back right wheel -->

   <link name="back_right_wheel">
      <visual>
         <origin xyz="0 0 0" rpy=" 1.570795 0 0" />
         <geometry>
            <cylinder length="0.1" radius="0.18" />
         </geometry>
         <material name="Black" />
      </visual>
   </link>

   <joint name="joint_back_right_wheel" type="continuous">
      <parent link="base_link" />
      <child link="back_right_wheel" />
      <origin xyz="-0.20 0.35 -0.05" rpy="0 0 0" />
      <axis xyz="0 1 0" />
   </joint>


   <!-- Back left wheel -->

   <link name="back_left_wheel">
      <visual>
         <origin xyz="0 0 0" rpy=" 1.570795 0 0" />
         <geometry>
            <cylinder length="0.1" radius="0.18" />
         </geometry>
         <material name="Black" />
      </visual>
   </link>

   <joint name="joint_back_left_wheel" type="continuous">
      <parent link="base_link" />
      <child link="back_left_wheel" />
      <origin xyz="-0.20 -0.35 -0.05" rpy="0 0 0" />
      <axis xyz="0 1 0" />
   </joint>

</robot>
